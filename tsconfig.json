{
	"extends": "@tsconfig/react-native/tsconfig.json",
	"compilerOptions": {
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "react-native",
		"lib": ["esnext", "dom"],
		"moduleResolution": "Node",
		"noEmit": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@core/*": ["src/core/*"],
			"@assets/*": ["assets/*"],
			"@src/*": ["src/*"]
		}
	}
}
